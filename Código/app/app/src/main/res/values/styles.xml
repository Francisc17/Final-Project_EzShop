<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="greenTitleStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_bold</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="greenTitleLightStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_regular</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="listTitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="listTitleStyle.listActivity">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="listCategoryNameStyle">
        <item name="android:fontFamily">@font/acumin_pro_semicond_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="listDescriptionStyle">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="resultLabelNameStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="resultConfidenceStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_medium</item>
        <item name="android:textColor">@color/medium_grey</item>
    </style>

    <style name="textInputStyleLoginRegister" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext_login_register</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/medium_grey</item>
    </style>

    <style name="textLoginRegisterBtn">
        <item name="android:fontFamily">@font/acumin_pro_semicond_bold</item>
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="addImageBtn">
        <item name="android:fontFamily">@font/acumin_pro_semicondensed</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="forgotPasswordTextStyle" parent="textLoginRegisterBtn">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="saveButtonStyle">
        <item name="android:backgroundTint">@color/medium_grey</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_semibold</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="newProductButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_semibold</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="articleNotFound">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/acumin_pro_semicond_semibold</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomSpinnerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/darker_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>