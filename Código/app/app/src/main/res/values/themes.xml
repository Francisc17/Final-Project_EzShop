<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EzShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/darker_grey</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.EzShop.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/alert_dialog_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">#BFFFFFFF</item>
    </style>
</resources>